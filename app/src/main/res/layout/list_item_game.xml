<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/games_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#87000000">

    <TextView
        android:id="@+id/state_game_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_2sdp"
        android:text=""
        android:textColor="@color/white"
        android:textSize="@dimen/_20sdp"
        android:textStyle="normal|bold" />

    <TextView
        android:id="@+id/date_game_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/state_game_row"
        android:layout_marginEnd="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_2sdp"
        android:text=""
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="@dimen/_18sdp" />

    <TextView
        android:id="@+id/time_game_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/date_game_row"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_2sdp"
        android:text=""
        android:textColor="@color/white"
        android:textSize="@dimen/_25sdp"
        android:textStyle="normal|bold" />

    <TextView
        android:id="@+id/city_game_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/state_game_row"
        android:layout_alignStart="@+id/state_game_row"
        android:layout_below="@+id/state_game_row"
        android:layout_marginTop="@dimen/_5sdp"
        android:text=""
        android:textColor="@color/white"
        android:textSize="@dimen/_17sdp"
        android:textStyle="normal|italic" />

    <TextView
        android:id="@+id/contact_game_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/city_game_row"
        android:layout_alignStart="@+id/city_game_row"
        android:layout_below="@+id/city_game_row"
        android:layout_marginTop="@dimen/_5sdp"
        android:gravity="center_horizontal"
        android:text=""
        android:textColor="@color/white"
        android:textSize="@dimen/_17sdp"
        android:textStyle="normal|italic" />

    <TextView
        android:id="@+id/address_game_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/contact_game_row"
        android:layout_alignStart="@id/contact_game_row"
        android:layout_below="@id/contact_game_row"
        android:layout_marginTop="@dimen/_5sdp"
        android:gravity="center_horizontal"
        android:text=""
        android:textColor="@color/white"
        android:textSize="@dimen/_17sdp"
        android:textStyle="normal|italic" />

    <TextView
        android:id="@+id/message_game_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/address_game_row"
        android:layout_alignStart="@id/address_game_row"
        android:layout_below="@id/address_game_row"
        android:layout_marginTop="@dimen/_15sdp"
        android:text=""
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="@dimen/_17sdp"
        android:textStyle="bold|italic" />

</RelativeLayout>