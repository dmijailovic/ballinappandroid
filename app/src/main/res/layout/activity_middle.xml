<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ballinapp.com.ballinapp.app.MiddleActivity"
    android:background="@drawable/log_reg_wp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/logo_middle_activity"
        android:layout_width="@dimen/_175sdp"
        android:layout_height="@dimen/_175sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@android:color/transparent"
        android:scaleType="centerInside"
        android:adjustViewBounds="true"
        app:srcCompat="@drawable/logo"
        android:contentDescription="@string/logo"
        android:layout_gravity="center"/>

    <ImageButton
        android:id="@+id/image_button_reg_team"
        android:layout_width="@dimen/_137sdp"
        android:layout_height="@dimen/_44sdp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/_120sdp"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:contentDescription="@string/register_bt"
        android:onClick="continueFlow"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/register_project" />


</LinearLayout>
