<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/add_player_wp"
    android:orientation="vertical"
    tools:context="ballinapp.com.ballinapp.team.MyProfile">

    <TextView
        android:id="@+id/team_name_tv_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_15sdp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="tgrtgrtgrtgr"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:layout_gravity="center"
        android:textColor="@android:color/background_light"
        android:textSize="@dimen/_30sdp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/state_tv_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="tgrtgrt"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@android:color/background_light"
        android:textSize="@dimen/_20sdp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/city_tv_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="rtgrtgtr"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@android:color/background_light"
        android:textSize="@dimen/_25sdp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/open_tv_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_20sdp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="rgtgrtgtrtgr"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="@dimen/_20sdp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_10sdp">

        <TextView
            android:id="@+id/app_plus_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_weight="1"
            android:text="23"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/green"
            android:textSize="@dimen/_30sdp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/app_minus_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_weight="1"
            android:text="2"
            android:textAlignment="center"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="@dimen/_30sdp"
            android:textStyle="bold" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="@dimen/_130sdp"
        android:layout_height="@dimen/_44sdp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/_20sdp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/players"
        android:onClick="players"
        android:scaleType="fitStart"
        app:srcCompat="@drawable/players_img_button" />

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="@dimen/_130sdp"
        android:layout_height="@dimen/_44sdp"
        android:scaleType="fitStart"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_gravity="center_horizontal"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/my_games_img_button"
        android:contentDescription="@string/img_button"
        android:onClick="myGames"/>

</LinearLayout>
